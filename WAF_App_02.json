{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.6.0",
    "id": "5489432-WAF",
    "label": "ASM App 2",
    "remark": "ASM_policy_external_URL",
    "controls": {
      "class": "Controls",
      "trace": true,
      "logLevel": "debug"
    },
    "WAF_App_02": {
      "class": "Tenant",
      "HTTP_Service": {
        "class": "Application",
        "template": "http",
        "serviceMain": {
          "class": "Service_HTTP",
          "virtualAddresses": [
            "10.0.81.10"
          ],
          "snat": "auto",
          "pool": "Pool1",
          "policyWAF": {
            "use": "Basic_WAF_Policy"
          }
        },
        "Pool1": {
          "class": "Pool",
          "monitors": [
            { "use": "DVWA_monitor" }
          ],
          "members": [
            {
              "servicePort": 8001,
              "serverAddresses": [
                "10.0.10.4"
              ]
            },
            {
              "servicePort": 8002,
              "serverAddresses": [
                "10.0.10.4"
              ]
            }
          ]
        },
        "DVWA_monitor": {
          "class": "Monitor",
          "monitorType": "http",
          "interval": 5,
          "timeout": 16,
          "send": "HEAD /login.php HTTP/1.0\\r\\n\\r\\n",
          "receive": ""
        },
        "Basic_WAF_Policy": {
          "class": "WAF_Policy",
          "url": "https://raw.githubusercontent.com/rabru/WAF_policy/master/basic_waf_utf-8_v13_1__2018-12-3_11-56-17.xml",
          "ignoreChanges": true
        }
      }
    }
  }
}
